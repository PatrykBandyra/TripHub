<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_MyTrip_margin_bottom"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/item_MyTrip_content_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserImage"
            android:layout_width="@dimen/item_MyTrip_image_size"
            android:layout_height="@dimen/item_MyTrip_image_size"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/ic_user_placeholder_black"
            app:civ_border_color="@color/primary_text_color"
            app:civ_border_width="@dimen/item_MyTrip_image_circular_border_width" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_MyTrip_name_layout_margin_start"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/item_MyTrip_name_text_size"
                tools:text="Username" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_MyTrip_created_by_text_size"
                tools:text="Email" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_MyTrip_divider_height"
        android:layout_marginTop="@dimen/item_MyTrip_divider_margin_top"
        android:background="@color/divider_color" />

</LinearLayout>