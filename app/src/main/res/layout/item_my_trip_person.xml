<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/item_myTripPerson_marginBottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/item_myTripPerson_content_padding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivPersonImage"
            android:layout_width="@dimen/item_myTripPerson_image_size"
            android:layout_height="@dimen/item_myTripPerson_image_size"
            android:contentDescription="@string/image_content_description"
            android:src="@drawable/ic_user_placeholder_black"
            app:civ_border_color="@color/primary_text_color"
            app:civ_border_width="@dimen/item_myTripPerson_image_circular_width_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/item_myTripPerson_detail_layout_marginStart"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text_color"
                android:textSize="@dimen/item_myTripPerson_name_text_size"
                tools:text="Member Name" />

            <TextView
                android:id="@+id/tvPersonEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="@dimen/item_myTripPerson_email_text_size"
                tools:text="Email" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_myTripPerson_divider_height"
        android:layout_marginTop="@dimen/item_myTripPerson_divider_marginTop"
        android:background="@color/divider_color" />
</LinearLayout>